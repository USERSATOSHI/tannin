{
	"name": "@tannin/root",
	"private": true,
	"type": "module",
	"scripts": {
		"test:unit": "mocha packages/*/__tests__ --require mocha.config.js",
		"test:lint": "eslint .",
		"test:types": "npm run build:types",
		"test": "npm run test:unit && npm run test:lint && npm run test:types",
		"build:bundle": "rollup -c",
